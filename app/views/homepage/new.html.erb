var countMax = 5; 
var commonName = "T"; 
var count = countMin;  
function addField() {  
if(count == countMax)  
alert("Maximum of "+countMax+" column.");  
else      
document.getElementById("fieldSpace").innerHTML += "<div>" + (++count) + '<input type="text" name="' + commonName + count + '"></div>';   
} 
function delField() { 
if (count > countMin) { 
var fs = document.getElementById("fieldSpace");  
fs.removeChild(fs.lastChild); 
count--; 
} else { 
alert("No column can delete"); 
}    
} 
</script>


