<h1>Exchange For Good_Edit</h1>
<%= form_for @event, :url => {:action => 'update', :id => @event } do |f| %>
Title: </br>
    <%= f.text_field :title %>
</br></br>
Category: 
<%= f.select :cate, [['clothes','1'],['shoes','2'],['3C','3']] %>
</br></br>
<p>
     <b> Upload picture: </b><br/>
    <%= f.file_field :pic %></b><br/>
  </p>
Discription: </br>
    <%= f.text_area :discription, size: "55x10" %>

    <%= f.submit "Update" %>
</br></br>
<% end %>
